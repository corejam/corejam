{
  "packages": ["packages/*", "packages/plugins/*", "examples/*"],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "ignoreChanges": [
    "**/CHANGELOG.md",
    "**/node_modules/**",
    "**/.github/**",
    "**/package.json",
    "**/*.md",
    "**/perf/**"
  ],
  "command": {
    "version": {
      "exact": true,
      "allowBranch": ["main", "next"]
    },
    "publish": {
      "npmClient": "npm",
      "allowBranch": ["master", "canary"],
      "registry": "https://registry.npmjs.org/",
      "conventionalCommits": true,
      "message": "chore(release): Release"
    }
  }
}
