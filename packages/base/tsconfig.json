{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "skipLibCheck": true,
    "outDir": "./dist/esm",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "src/cli/templates"
  ]
}