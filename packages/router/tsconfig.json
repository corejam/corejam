{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2017"],
    "outDir": "build",
    "declarationDir": "dist",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2019",
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "files": ["src/index.ts"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
