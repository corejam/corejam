{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "outDir": "./dist/esm",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "rootDir": "./"
  },
  "include": [
    "server/**/*",
    "shared/graphql/**/*",
    "shared/types/**/*",
    "index.ts"
  ],
  "exclude": [
    "routes/**/*",
    "components/**/*",
    "dist/**/*"
  ]
}