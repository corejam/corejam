{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": false,
    "jsx": "react",
    "jsxFactory": "h",
    "keyofStringsOnly": false,
    "skipLibCheck": true
  },
  "include": [
    "app",
    "shared",
    "types/jsx.d.ts"
  ],
  "exclude": [
    "node_modules",
    "react"
  ]
}