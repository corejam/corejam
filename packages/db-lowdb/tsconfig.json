{
    "compilerOptions": {
        "target": "ES5",
        "module": "ES2020",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": false,
        "skipLibCheck": true,
        "outDir": "./dist/esm",
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true,
        "types": [
            "node"
        ],
        "moduleResolution": "node",
        "declaration": true,
        "rootDir": "./"
    },
    "include": [
        "index.ts",
        "server/**/*"
    ],
    "exclude": [
        "routes/**/*",
        "components/**/*",
        "dist/**/*"
    ]
}